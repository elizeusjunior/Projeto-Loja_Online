@model Loja_rec.Models.Produto
@{
    ViewBag.Title = "Editar Produto";
}

<h2 class="my-3">Editar produto</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="mb-3">
        @Html.LabelFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-label" } })
        @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="mb-3">
        @Html.LabelFor(model => model.Preco, new { htmlAttributes = new { @class = "form-label" } })
        @Html.EditorFor(model => model.Preco, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="mb-3">
        @Html.LabelFor(model => model.Quantidade, new { htmlAttributes = new { @class = "form-label" } })
        @Html.EditorFor(model => model.Quantidade, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="mb-3">
        @Html.LabelFor(model => model.Sku, new { htmlAttributes = new { @class = "form-label" } })
        @Html.EditorFor(model => model.Sku, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <button type="submit" class="btn btn-primary">Editar Produto</button>
    @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control", @style = "display:none" } })
}